{
  "compilerOptions": {
    "target": "ES5", // Use ES5 or higher
    "module": "CommonJS", // Module system
    "allowJs": true, // Allow JavaScript files
    "checkJs": true, // Check JS files for type errors
    "strict": true, // Enable strict type checking
    "types": ["cypress"], // Include Cypress types
    "baseUrl": ".", // Base URL for module resolution
    "outDir": "dist" // Output directory for compiled files
  },
  "include": ["cypress/**/*.ts"], // Include all TypeScript files in the Cypress folder
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
